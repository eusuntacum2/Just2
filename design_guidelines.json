    "page_load": "Fade in + Slide up (framer-motion)",
    "scroll": "Parallax for hero images"
  },
  "accessibility": {
    "contrast": "Ensure 4.5:1 for normal text, 3:1 for large text.",
    "focus_states": "Visible focus ring (ring-2 ring-offset-2 ring-primary).",
    "reduced_motion": "Respect prefers-reduced-motion media query."
  },
  "tech_stack": {
    "framework": "React",
    "styling": "Tailwind CSS",
    "components": "shadcn/ui",
    "icons": "lucide-react",
    "charts": "recharts (via shadcn/chart)"
  },
  "instructions_to_main_agent": [
    "Implement the 'Paper & Ink' (Light) and 'Obsidian & Gold' (Dark) themes in tailwind.config.js.",
    "Install fonts: Libre Baskerville (Headings), DM Sans (Body), JetBrains Mono (Data).",
    "Use the provided image URLs for the Landing Page.",
    "Build the Dashboard using the 'Bento Density' grid layout.",
    "Ensure all interactive elements have data-testid attributes.",
    "Do NOT use default Shadcn styles; customize borders to be sharp (rounded-none) or minimal.",
    "Use 'sonner' for toast notifications.",
    "Create a 'Layout' component that handles the Sidebar/Header structure for the Dashboard."
  ],
  "universal_guidelines": [
    "Avoid 'AI slop' aesthetics (generic centered layouts, gradients).",
    "Use z-index hierarchy for depth.",
    "No universal 'transition: all'.",
    "No center-aligned app container.",
    "Use micro-animations for all interactions.",
    "Use named exports for components, default exports for pages."
  ]
}